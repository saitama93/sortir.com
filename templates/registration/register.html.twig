{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <h1 class="text-center mt-5 mb-3">Inscription</h1>
        <div class="row">
            <div class="col-xs-12">
                {{ form_start(registrationForm) }}
                {{ form_row(registrationForm.username) }}
                {{ form_row(registrationForm.plainPassword) }}
                {{ form_row(registrationForm.nom) }}
                {{ form_row(registrationForm.prenom) }}
                {{ form_row(registrationForm.mail) }}
                {{ form_row(registrationForm.telephone) }}
                {{ form_row(registrationForm.isActif) }}
                {{ form_row(registrationForm.isAdmin) }}
                {{ form_row(registrationForm.agreeTerms) }}

                <div class="d-flex justify-content-center items-center">
                    <button type="submit" class="btn btn-info mb-3">S'inscrire</button>
                </div>
                {{ form_end(registrationForm) }}
            </div>
        </div>
{% endblock %}
